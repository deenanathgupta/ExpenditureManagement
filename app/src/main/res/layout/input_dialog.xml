<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/expendetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="27dp"
            android:hint="Enter Expenditure desc." />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/expenAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expendetails">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/expendetails"
            android:layout_marginTop="27dp"
            android:hint="Enter Amount" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/expendate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expenAmount">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/expenAmount"
            android:layout_marginTop="27dp"
            android:hint="Enter Date" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expendate"
        android:layout_marginTop="27dp"
        android:divider="#000000"
        android:dividerPadding="22dip"
        android:showDividers="middle"
        android:weightSum="2"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        >

        <Button
            android:id="@+id/btnsubmit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Submit" />

        <Button
            android:id="@+id/btncancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/button"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:background="@android:color/transparent"
            android:text="Cancel" />
    </LinearLayout>
</RelativeLayout>